{
  "private": true,
  "name": "origin.js",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/originjs/origin.js.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint ./packages --ext .vue,.js,.ts",
    "test": "yarn build && jest"
  },
  "author": "@originjs",
  "license": "MulanPSL2",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.31.0",
    "eslint-plugin-vue": "^7.14.0",
    "jest": "^27.0.6",
    "lerna": "^3.19.0",
    "lint-staged": "^11.0.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
